# Production Environment Variables Template
# FILL IN THESE VALUES WITH REAL SECRETS AND RENAME TO .env ON THE SERVER

# Django Security
DEBUG=0
DJANGO_SECRET_KEY=your_super_secret_and_long_random_string_here
ALLOW_DEBUG_INACTIVE_LOGIN=False

# Domains and Security (Replace maestro.uz with your actual domain)
ALLOWED_HOSTS=maestro.uz,www.maestro.uz,127.0.0.1,localhost
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=https://maestro.uz,https://www.maestro.uz
CSRF_TRUSTED_ORIGINS=https://maestro.uz,https://www.maestro.uz

# Database
# (If using the Hetzner docker-compose, these match the docker-compose.yml defaults)
SQL_ENGINE=django.db.backends.postgresql
SQL_DATABASE=hello_django_dev
SQL_USER=hello_django
SQL_PASSWORD=hello_django
SQL_HOST=db
SQL_PORT=5432
DATABASE_URL=postgres://hello_django:hello_django@db:5432/hello_django_dev

# Redis & Celery
REDIS_URL=redis://redis:6379/0
USE_REDIS_CACHE=True
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# External APIs
GEMINI_API_KEY=your_real_gemini_api_key_here

# SMTP Email Configuration (Fill with actual SMTP details like SendGrid, Mailjet, or Yandex)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your_provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=no-reply@maestro.uz
EMAIL_HOST_PASSWORD=your_smtp_password
DEFAULT_FROM_EMAIL=Maestro <no-reply@maestro.uz>
